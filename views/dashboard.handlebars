{{#each posts as |post|}}
<article class="post">
<a href="/single-post/{{post.id}}"><h3>{{post.title}}</h3></a>
<h4>{{post.post_text}}</h4>
CREATED AT {{post.created_at}}
</article>
{{/each}}
{{#if loggedIn}}
<h2>You are logged in!</h2>
<form >
Title:<textarea class="new-post-title"></textarea>
text:<textarea class="new-post-text"></textarea>
<button class="new-postbtn" type="click">New post</button>
</form>
<script src="/js/dashboard.js"></script>
{{else}}
<h2>You are not logged in</h2>
{{/if}}


